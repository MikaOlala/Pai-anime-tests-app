<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="368sp"
    android:layout_height="420sp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_back_avatar"
        android:gravity="center"
        android:orientation="vertical"

        android:onClick="layoutClick"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YaaaaY"
            android:textColor="@color/darkViola"
            android:textSize="23sp"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:id="@+id/textAnime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:text="Your Avatar has saved!"
            android:textColor="@color/darkViola"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="80sp"

            android:src="@drawable/icon_man"/>
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/cheers"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:text="@string/cheers"
        android:textColor="@color/darkViola"
        android:background="@drawable/dialog_back"

        android:layout_marginTop="10sp"
        app:layout_constraintTop_toBottomOf="@+id/firstLayout"
        app:layout_constraintRight_toRightOf="@+id/firstLayout"
        app:layout_constraintLeft_toLeftOf="@+id/firstLayout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>