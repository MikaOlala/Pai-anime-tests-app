<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/eyeKiller"/>
                    <!-- alttan gÃ¶lge -->
                    <corners android:radius="30sp"/>
